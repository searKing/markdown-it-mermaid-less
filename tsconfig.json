{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution":"node",
    "lib": [
      "esnext",
      "dom",
      "es2015"
    ],
    "target": "es2015",
    "strict": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "types": [
      "jest",
      "lodash",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
